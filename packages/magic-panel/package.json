{
  "name": "magic-panel",
  "private": false,
  "description": "React library developed with TailwindCSS to simplify the implementation of modals and drawers",
  "version": "1.0.14",
  "sideEffects": true,
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.mjs",
  "types": "./dist/src/index.d.ts",
  "type": "module",
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lchenrique/magic-panel.git"
  },
  "keywords": [
    "magicpanel",
    "panel",
    "magic panel",
    "panel library",
    "user interface",
    "UI",
    "UI components",
    "panel tools",
    "dynamic panel",
    "responsive layout",
    "interface design",
    "interactive panel",
    "customizable panel",
    "frontend",
    "web development",
    "JavaScript library",
    "panel integration",
    "modular panel",
    "easy-to-use panel",
    "panel widgets",
    "modal",
    "drawer"
  ],
  "author": "Carlos Henrique",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lchenrique/magic-panel/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.cjs",
      "types": "./dist/src/index.d.ts"
    },
    "./plugin": {
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    },
    "./index.css": "./dist/src/index.css"
  },
  "scripts": {
    "tw-css": "npx tailwindcss -i ./src/index.css -o ./src/output.css",
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "jest"
  },
  "prettier": {
    "printWidth": 80
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "clsx": "^2.1.1",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-router-dom": "^6.24.1",
    "react-syntax-highlighter": "^15.5.0",
    "tailwind-merge": "^2.3.0",
    "vite-plugin-dts": "^3.9.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  }
}